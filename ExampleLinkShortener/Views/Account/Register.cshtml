@model ExampleLinkShortener.ViewModels.RegisterViewModel

<div class="container">

    <h2>Register.</h2>
    <div class="row">
        <div class="col-md-4">
            <section id="socialLoginForm">
                <h4>Use other service to register.</h4>

                <hr>
                <form asp-action="ExternalLogin" asp-controller="Account">

                    <div id="socialLoginList" class="col-12">
                        <p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <button type="submit" class="btn btn-outline-dark text-transformation-none" id="currentURL1" name="returnUrl" value="/Home/Index" title="Log in using your Google account">
                                <img class="google-btn-logo" src="~/сontent/Images/facebook logo.png" width="19" height="19"> Sign in with Facebook
                            </button>
                        </p>
                    </div>
                </form>

                <form asp-action="ExternalLoginGoogle" asp-controller="Account">
                    <div id="socialLoginList" class="col-12">
                        <p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <button type="submit" class="btn btn-outline-dark text-transformation-none" id="currentURL1" name="returnUrl" value="/Home/Index" title="Log in using your Google account">
                                <img class="google-btn-logo" src="~/сontent/Images/g100px.png" width="19" height="19"> Sign in with Google
                            </button>

                        </p>
                    </div>
                </form>

            </section>
        </div>
        <div class="col-md-8">
            <section id="loginForm">

                <form  class="form-horizontal" method="post" asp-controller="Account" asp-action="Register" asp-validation-summary="ModelOnly">
                    
                    <h4>Create a new account.</h4>
                    <hr>
                    <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
                        <ul>
                            <li style="display:none"></li>
                        </ul>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="Email">Email</label>
                        <div class="col-md-10">
                            <input class="form-control" data-val="true" asp-for="Email">
                            <span class="field-validation-valid text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="Year">Year</label>
                        <div class="col-md-10">
                            <input class="form-control" data-val="true" asp-for="Year">
                            <span class="field-validation-valid text-danger" asp-validation-for="Year"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="Password">Password</label>
                        <div class="col-md-10">
                            <input class="form-control" data-val="true" asp-for="Password">
                            <span class="field-validation-valid text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-4 control-label" asp-for="PasswordConfirm">Password</label>
                        <div class="col-md-10">
                            <input class="form-control" data-val="true" asp-for="PasswordConfirm">
                            <span class="field-validation-valid text-danger" asp-validation-for="PasswordConfirm"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary" value="Register">
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>



</div>