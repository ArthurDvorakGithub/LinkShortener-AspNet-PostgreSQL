@model ExampleLinkShortener.ViewModels.ShortenerLinkViewModel

@{ ViewBag.Title = "Добавление новой ссылки"; }

<form asp-action="Shortify" asp-controller="Shortener">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Link" class="control-label">Link - вставьте ссылку</label>
        <input type="text" asp-for="Link" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LinkName" class="control-label">LinkName - название ссылки</label>
        <input type="number" asp-for="LinkName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>
